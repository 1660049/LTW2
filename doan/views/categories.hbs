<div class="section">
    <div class="container">
        <div class="row"></div>
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title">
                            <h2>{{catName}}</h2>
                        </div>
                    </div>
                    {{#each post}}
                    {{#each this}}
                    <div class="col-md-4">
                        <div class="post">
                            <a class="post-img" href="/post/{{this._id}}"><img src="{{this.img}}"
                                    alt="/public/img/Wallpapers-Heo-Timt-2019 21.jpg"></a>
                            <div class="post-body">
                                <div class="post-meta">
                                    <a class="post-category cat-4"
                                        href="/categories/{{this.chuyenMuc}}">{{this.chuyenMuc}}</a>
                                    <span class="post-date">{{h_dateformat this.ngayDang}}</span>
                                </div>
                                <h3 class="post-title"><a href="/post/{{this._id}}">{{this.tieuDe}}</a></h3>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{/each}}
                    <div class="col-md-12">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                {{#each this.page_numbers}}
                                {{#if active}}
                                <li class="page-item active" aria-current="page">
                                    <span class="page-link">
                                        {{value}}
                                        <span class="sr-only">(current)</span>
                                    </span>
                                </li>
                                {{else}}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{value}}">{{value}}</a>
                                </li>
                                {{/if}}
                                {{/each}}
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="aside-widget">
                    <div class="section-title">
                        <h2>Catagories</h2>
                    </div>
                    <div class="category-widget">
                        <ul>
                           <li><a href="/categories/Tin game" class="cat-1">Tin game<span>{{countTG}}</span></a></li>
                        <li><a href="/categories/Tin Esport" class="cat-2">Tin esport<span>{{countTE}}</span></a></li>
                        <li><a href="/categories/Cẩm nang" class="cat-4">Cẩm nang<span>{{countCN}}</span></a></li>
                        <li><a href="/Categories/Cộng đồng" class="cat-3">Cộng đồng<span>{{countCD}}</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>