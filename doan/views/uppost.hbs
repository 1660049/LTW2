<div class="container">
    <h2 class="mt-5">Đăng bài viết mới</h2>
    <div class="shadow p-3 mb-5 bg-white rounded mt-5">
        <form action="/user/uppost" method="POST" enctype="multipart/form-data">
            <div class="btn btn-primary btn-sm float-left">
                <span>Chọn ảnh tiêu đề</span>
                <input type="file" name="file">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Tiêu đề</span>
                </div>
                <input type="text" class="form-control" placeholder="" aria-label="Username"
                    aria-describedby="basic-addon1" id="tieuDe" name="tieuDe">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Chuyên mục</label>
                </div>
                <select class="custom-select" id="chuyenMuc" name="chuyenMuc">
                    <option selected>Choose...</option>
                    <option value="Tin game">Tin game</option>
                    <option value="Tin Esport">Tin Esport</option>
                    <option value="Cẩm nang">Cẩm nang</option>
                    <option value="Cộng đồng">Cộng đồng</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Tag</label>
                </div>
                <select class="custom-select" id="tag" name="tag">
                    <option selected>Choose...</option>
                    <option value="Phân tích">Phân tích</option>
                    <option value="Xu hướng">Xu hướng</option>
                    <option value="PBE">PBE</option>
                    <option value="Lịch thi đấu">Lịch thi đấu</option>
                    <option value="VCS">VCS</option>
                    <option value="LCS/LEC">LCS/LEC</option>
                    <option value="Quốc tế">Quốc tế</option>
                    <option value="Chiến thuật">Chiến thuật</option>
                    <option value="Cơ chế hoạt động">Cơ chế hoạt động</option>
                    <option value="Tướng">Tướng</option>

                </select>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Ngày đăng</span>
                </div>
                <input type="text" class="form-control" id="ngayDang" name="ngayDang">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Nội dung tóm tắt</span>
                </div>
                <input type="text" class="form-control" placeholder="" aria-label="Username"
                    aria-describedby="basic-addon1" id="abtract" name="abtract">
            </div>
            <textarea name="content" id="editor">
    </textarea>
            <div class="text-right">
                <button type="submit" class="btn btn-outline-success mt-5">Save</button>
            </div>
        </form>
    </div>
</div>