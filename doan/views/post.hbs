<header id="header">
    <div id="post-header" class="page-header">
        <div class="background-img" style="background-image: url('{{post.img}}');"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1>{{post.tieuDe}}</h1>
                    <div class="post-meta">
                        <a class="post-category cat-1" href="#">{{post.chuyenMuc}}</a>
                        <a class="post-category cat-4" href="#">{{post.tag}}</a>
                        <span class="post-date">{{post.ngayDang}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="section-row sticky-container">
                    <div class="main-post">
                        {{{post.content}}}
                    </div>
                    <div class="section-row">
                        <div class="post-author">
                            <div class="media">
                                <div class="media-left">
                                    <img class="media-object" src="/public/img/Wallpapers-Heo-Timt-2019 19.jpg" alt="">
                                </div>
                                <div class="media-body">
                                    <div class="media-heading">
                                        <h3>John Doe</h3>
                                    </div>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                                        incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis
                                        nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>