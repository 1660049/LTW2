<header class="mb-5">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active" style="background-image: url('{{postHeader1.img}}')">
                <div class="carousel-caption d-none d-md-block">
                    <h3><a href="/post/{{postHeader1._id}}" class="btn btn-primary btn-lg">Chi tiết</a></h3>
                    <p>{{postHeader1.tieuDe}}</p>
                </div>
            </div>

            <!-- Slide Two - Set the background image for this slide in the line below -->
            <div class="carousel-item" style="background-image: url('{{postHeader2.img}}')">
                <div class="carousel-caption d-none d-md-block">
                    <h3><a href="/post/{{postHeader2._id}}" class="btn btn-primary btn-lg">Chi tiết</a></h3>
                    <p>{{postHeader2.tieuDe}}</p>
                </div>
            </div>
            <!-- Slide Three - Set the background image for this slide in the line below -->
            <div class="carousel-item" style="background-image: url('{{postHeader3.img}}')">
                <div class="carousel-caption d-none d-md-block">
                    <h3><a href="/post/{{postHeader3._id}}" class="btn btn-primary btn-lg">Chi tiết</a></h3>
                    <p>{{postHeader3.tieuDe}}</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>



