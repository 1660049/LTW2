<div class="section">
    <div class="container">
        <div class="row"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2>Danh sách bài viết premium</h2>
                </div>
            </div>
            {{#each this.post}}
            <div class="col-md-4">
                <div class="post">
                    <a class="post-img" href="/post/{{_id}}"><img src="{{img}}"
                            alt="/public/img/Wallpapers-Heo-Timt-2019 21.jpg"></a>
                    <div class="post-body">
                        <div class="post-meta">
                            <a class="post-category cat-3" href="/premium">Premium</a>
                            <a class="post-category cat-4" href="/categories/{{chuyenMuc}}">{{chuyenMuc}}</a>
                            <span class="post-date">{{h_dateformat ngayDang}}</span>
                        </div>
                        <h3 class="post-title"><a href="/post/{{_id}}">{{tieuDe}}</a></h3>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>